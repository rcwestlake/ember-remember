<section>
  <h2 class="spec-selected-reminder">
    {{model.title}}
  </h2>
  <p class="spec-selected-date">
    {{model.date}}
  </p>
  <p class="spec-selected-notes">
    {{model.notes}}
  </p>
  <button class='spec-delete' {{action 'delete' model on="click"}}>
    Delete
  </button>
  <button>
    {{#link-to 'reminders.reminder.edit'
      model
      class="spec-link-edit-reminder"}}
      Edit Reminder
    {{/link-to}}
  </button>
</section>

{{outlet}}
