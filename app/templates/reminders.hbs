<h1>remEMBER</h1>

{{#if model}}
  <ul>
    {{#each model as |reminder|}}
      <li class="spec-reminder-item">
        <h3>
          {{#link-to 'reminders.reminder' reminder class="spec-reminder-title" }}
            {{reminder.title}}
          {{/link-to}}
        </h3>
        <p>{{reminder.date}}</p>
      </li>
    {{/each}}
  </ul>
{{else}}
  <h1>
    WELCOME!!!
  </h1>
  <p>
    Click button below to create a reminder.
  </p>
{{/if}}

<button>
  {{#link-to 'reminders.new' class='spec-link-new-reminder'}}
    Add Reminder
  {{/link-to}}
</button>

{{outlet}}
